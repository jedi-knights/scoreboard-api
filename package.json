{
  "name": "scoreboard-api",
  "version": "1.0.0",
  "description": "An express based API for the scoreboard application.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t scoreboard-api .",
    "docker:run": "docker run -p 3000:3000 scoreboard-api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jedi-knights/scoreboard-api.git"
  },
  "keywords": [
    "scoreboard",
    "api",
    "express",
    "sports"
  ],
  "author": "Omar Crosby",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jedi-knights/scoreboard-api/issues"
  },
  "homepage": "https://github.com/jedi-knights/scoreboard-api#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "testcontainers": "^10.0.0",
    "pg": "^8.11.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
